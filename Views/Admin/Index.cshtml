@using Flowershop_Strakova.Models
@{
    Layout = null;
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <title>FlowerShop – Admin Panel</title>

    <!-- Google Font pro nápis FlowerShop -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Neuton&display=swap" rel="stylesheet" />

    <style>
        /**********************************************
                                 * RESET A ZÁKLADY
                 **********************************************/
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            font-family: sans-serif;
            color: #9D4C83;
            background-color: #fff;
        }
        /**********************************************
                                 * HEADER (BÍLÝ PRUH NAHOŘE)
                 **********************************************/
        header {
            background-color: #fff;
            padding: 1rem 2rem;
        }

        .header-content {
            display: flex;
            align-items: center;
        }

        .logo {
            font-family: 'Neuton', serif;
            font-size: 3rem;
            font-weight: bold;
            color: #9D4C83;
        }
        /**********************************************
                             * RŮŽOVÁ SEKCE S VLNOU
                 **********************************************/
        .pink-section {
            position: relative;
            height: 500px;
            background-color: #FFE7F5;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 120px;
            overflow: hidden;
            line-height: 0;
        }

            .wave svg {
                display: block;
                width: 100%;
                height: 100%;
            }
        /**********************************************
                                * ADMIN KONTEJNER
                 **********************************************/
        .admin-container {
            position: relative;
            max-width: 440px;
            margin: -260px auto 0; /* posun přes vlnu */
            padding-bottom: 4rem;
        }

        .admin-box {
            background-color: #fff;
            border: 2px solid #9D4C83;
            border-radius: 12px;
            text-align: center;
            padding: 2rem;
            min-height: 250px;
        }

            .admin-box h1 {
                font-size: 2rem;
                margin-bottom: 0.3rem;
            }

            .admin-box p.subtitle {
                font-size: 1rem;
                margin-bottom: 2rem;
            }
        /**********************************************
                                 * TLAČÍTKA PRO ADMINA
                 **********************************************/
        .admin-button {
            background-color: #FFD5F2;
            border: none;
            color: #9D4C83;
            font-size: 1rem;
            font-weight: bold;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 0.5rem;
        }

            .admin-button:hover {
                background-color: #ffc1ec;
            }
    </style>
</head>
<body>
    <!-- HEADER S LOGEM -->
    <header>
        <div class="header-content">
            <div class="logo">FlowerShop</div>
        </div>
    </header>

    <!-- RŮŽOVÁ SEKCE S VLNOU -->
    <section class="pink-section">
        <div class="wave">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M0.00,49.98
                         C150.00,150.00 350.00,-50.00 500.00,49.98
                         L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;"></path>
            </svg>
        </div>
    </section>

    <!-- ADMIN KONTEJNER -->
    <div class="admin-container">
        <div class="admin-box">
            <h1>Admin Panel</h1>
            <p class="subtitle">Vyberte sekci, kterou chcete spravovat</p>
            <div class="admin-buttons">
                <a href="@Url.Action("Orders", "Admin")" class="admin-button">Objednávky</a>
                <a href="@Url.Action("Categories", "Admin")" class="admin-button">Kategorie</a>
                <a href="@Url.Action("Products", "Admin")" class="admin-button">Produkty</a>
                <a href="@Url.Action("Users", "Admin")" class="admin-button">Uživatelé</a>
            </div>
        </div>
    </div>
</body>
</html>
