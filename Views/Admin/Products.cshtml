@{
    Layout = null;
    ViewData["Title"] = "Správa produktů";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <title>FlowerShop – Správa produktů</title>

    <!-- Google Font pro nápis FlowerShop -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Neuton&display=swap" rel="stylesheet" />

    <style>
        /* RESET A ZÁKLADY */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            font-family: sans-serif;
            color: #9D4C83;
            background-color: #fff;
        }

        /* HEADER */
        header {
            background-color: #fff;
            padding: 1rem 2rem;
        }

        .header-content {
            display: flex;
            align-items: center;
        }

        .logo {
            font-family: 'Neuton', serif;
            font-size: 3rem;
            font-weight: bold;
            color: #9D4C83;
        }

        /* RŮŽOVÁ SEKCE */
        .pink-section {
            position: relative;
            height: 400px;
            background-color: #FFE7F5;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 120px;
            overflow: hidden;
            line-height: 0;
        }

            .wave svg {
                display: block;
                width: 100%;
                height: 100%;
            }

        /* OBSAH STRÁNKY */
        .content-container {
            position: relative;
            max-width: 800px;
            margin: -200px auto 0;
            padding-bottom: 4rem;
        }

        .content-box {
            background-color: #fff;
            border: 2px solid #9D4C83;
            border-radius: 12px;
            padding: 2rem;
        }

            .content-box h1 {
                font-size: 2rem;
                margin-bottom: 1rem;
                text-align: center;
            }

        /* TLAČÍTKA */
        .admin-button {
            background-color: #FFD5F2;
            border: none;
            color: #9D4C83;
            font-size: 1rem;
            font-weight: bold;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 0.5rem 0.5rem 0.5rem 0;
        }

            .admin-button:hover {
                background-color: #ffc1ec;
            }

        /* TABULKA */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

            table thead th {
                background-color: #FFD5F2;
                color: #9D4C83;
                padding: 0.7rem;
                border: 2px solid #9D4C83;
            }

            table tbody td {
                border: 1px solid #9D4C83;
                padding: 0.5rem;
            }
    </style>
</head>
<body>

    <!-- HEADER -->
    <header>
        <div class="header-content">
            <div class="logo">FlowerShop</div>
        </div>
    </header>

    <!-- PINK SECTION -->
    <section class="pink-section">
        <div class="wave">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M0.00,49.98
                         C150.00,150.00 350.00,-50.00 500.00,49.98
                         L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;"></path>
            </svg>
        </div>
    </section>

    <!-- OBSAH SPRÁVY PRODUKTŮ -->
    <div class="content-container">
        <div class="content-box">
            <h1>Správa produktů</h1>

            <!-- Tlačítko pro přidání produktu -->
            <a href="@Url.Action("CreateProduct", "Admin")" class="admin-button">Přidat produkt</a>

            <!-- Ukázková tabulka produktů -->
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Název</th>
                        <th>Cena</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @* Příklad statických dat *@
                    <tr>
                        <td>1</td>
                        <td>Červené růže Deluxe</td>
                        <td>350 Kč</td>
                        <td>
                            <a href="@Url.Action("EditProduct", "Admin", new { id = 1 })" class="admin-button">Upravit</a>
                            <a href="@Url.Action("DeleteProduct", "Admin", new { id = 1 })" class="admin-button">Smazat</a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Barevné tulipány</td>
                        <td>200 Kč</td>
                        <td>
                            <a href="@Url.Action("EditProduct", "Admin", new { id = 2 })" class="admin-button">Upravit</a>
                            <a href="@Url.Action("DeleteProduct", "Admin", new { id = 2 })" class="admin-button">Smazat</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
