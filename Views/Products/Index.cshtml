@model List<Flowershop_Strakova.Models.ProductViewModel>
@* @model IEnumerable<Flowershop_Strakova.Models.ProductViewModel> *@

@{
    ViewBag.Title = "FlowerShop - Domů";
    Layout = null; // Případně využijte vlastní layout
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 70px;
        }
        /* Levý postranní panel */
        .sidebar {
            background-color: #f8f9fa;
            padding: 15px;
            min-height: 100vh;
        }
        /* Produktové karty */
        .product-card {
            margin-bottom: 20px;
        }
        /* Profilový obrázek v navigaci */
        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }
        /* Úprava kategorie v sidebaru */
        .sidebar h5 {
            margin-bottom: 15px;
        }
        .sidebar a {
            color: #343a40;
            text-decoration: none;
        }
        .sidebar a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Horní navigační lišta -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="#">FlowerShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Obsah lišty -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <!-- Vyhledávací pole uprostřed -->
            <form class="form-inline mx-auto" method="get" action="@Url.Action("Search", "Products")">
                <input name="query" class="form-control mr-sm-2" type="search" placeholder="Hledat" aria-label="Hledat">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Hledat</button>
            </form>
            <!-- Profilový dropdown v pravém rohu -->
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown">
                        <img src="~/images/profile-placeholder.png" alt="Profil" class="profile-img">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                        <a class="dropdown-item" href="#">Profil</a>
                        <a class="dropdown-item" href="#">Nastavení</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Odhlásit se</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hlavní obsah stránky -->
    <div class="container-fluid">
        <div class="row">
            <!-- Postranní lišta s kategoriemi -->
            <nav class="col-md-3 sidebar">
                <h5>Kategorie</h5>
                <div id="accordion">
                    <!-- Řezané květiny -->
                    <div class="card">
                        <div class="card-header p-1" id="headingOne">
                            <h6 class="mb-0">
                                <button class="btn btn-link btn-block text-left" data-toggle="collapse" data-target="#collapseOne">
                                    Řezané květiny
                                </button>
                            </h6>
                        </div>
                        <div id="collapseOne" class="collapse" data-parent="#accordion">
                            <div class="card-body p-1">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 11 })">Růže</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 12 })">Tulipány</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 13 })">Gerbery</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 14 })">Lilie</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 15 })">Chryzantémy</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Květinové kytice a aranže -->
                    <div class="card">
                        <div class="card-header p-1" id="headingTwo">
                            <h6 class="mb-0">
                                <button class="btn btn-link btn-block text-left collapsed" data-toggle="collapse" data-target="#collapseTwo">
                                    Květinové kytice a aranže
                                </button>
                            </h6>
                        </div>
                        <div id="collapseTwo" class="collapse" data-parent="#accordion">
                            <div class="card-body p-1">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 21 })">Dárkové kytice</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 22 })">Slavnostní aranžmá</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 23 })">Firemní aranžmá</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Pokojové a kancelářské rostliny -->
                    <div class="card">
                        <div class="card-header p-1" id="headingThree">
                            <h6 class="mb-0">
                                <button class="btn btn-link btn-block text-left collapsed" data-toggle="collapse" data-target="#collapseThree">
                                    Pokojové a kancelářské rostliny
                                </button>
                            </h6>
                        </div>
                        <div id="collapseThree" class="collapse" data-parent="#accordion">
                            <div class="card-body p-1">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 31 })">Sukulenty a kaktusy</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 32 })">Orchideje</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 33 })">Fikusy a palmy</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 34 })">Bonsaje</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CategorySelected", "Products", new { selectedCategory = 35 })">Bylinky a aromatické rostliny</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Přidejte další kategorie dle potřeby -->
                </div>
            </nav>


            <!-- Hlavní sekce pro zobrazení produktů -->
            <main class="col-md-9">
                <div class="row">
                    <div class="row">
                        @foreach (var product in Model)
                        {
                            <div class="col-md-4">
                                @Html.Partial("_ProductListPartial", product)

@*                              @Html.PartialAsync("_ProductListPartial", product) *@
                            </div>
                        }
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap a jQuery skripty -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
