





@model Flowershop_Strakova.Models.ProductViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <title>FlowerShop</title>
    <style>
        /* Obecný reset a výchozí styl */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: sans-serif;
            color: #333;
        }

        /* Horní část s logem/brandem */
        header {
            background-color: #fff;
            padding: 1rem 2rem;
        }

            header h1 {
                color: #a832a8;
                font-size: 1.8rem;
            }

        /* Růžová sekce s vlnou */
        .pink-section {
            position: relative;
            background-color: #ffe6f0;
            height: 300px;
            overflow: hidden;
        }

            /* Horizontální linka */
            .pink-section hr {
                width: 80%;
                max-width: 600px;
                margin: 2rem auto;
                border: none;
                height: 1px;
                background-color: #a832a8;
            }

        /* Vlna vytvořená pomocí SVG */
        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 120px;
        }

            .wave svg {
                display: block;
                width: 100%;
                height: 100%;
            }

        /* Sekce pro nadpis "Recenze uživatelů" */
        .reviews {
            text-align: center;
            padding: 2rem 1rem;
            background-color: #fff;
        }

            .reviews h2 {
                color: #a832a8;
                font-size: 1.8rem;
            }
    </style>
</head>
<body>

    <header>
        <h1>FlowerShop</h1>
    </header>

    <section class="pink-section">
        <hr />
        <!-- Vlna přesahující do bílé barvy -->
        <div class="wave">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M0.00,49.98 C150.00,150.00 350.00,-50.00 500.00,49.98
                         L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;">
                </path>
            </svg>
        </div>
    </section>

    <section class="reviews">
        <h2>Recenze uživatelů</h2>
        <!-- Sem můžete přidat jednotlivé recenze nebo další obsah -->
    </section>

</body>
</html>