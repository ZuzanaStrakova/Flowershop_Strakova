@model Flowershop_Strakova.Models.ProductViewModel
@{
    // Pokud máte layout, použijte: Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <title>FlowerShop - @Model.Name</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- FontAwesome (hvězdičky, ikony) -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        /* Celkový vzhled */
        body {
            background: url("~/Content/images/pozadi.png") no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            font-family: Neonderthaw, sans-serif;
        }

        /* Hlavička (logo, kategorie, vyhledávání, uživatel) */
        .header {
            background-color: #FFD6E3; /* Jemně růžový pruh */
            padding: 1rem 2rem;
        }

            .header .top-row {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            .header .logo {
                font-size: 1.8rem;
                font-weight: bold;
                color: #4B4B4B;
            }

            .header .search-bar {
                position: relative;
                width: 300px;
            }

                .header .search-bar input {
                    width: 100%;
                    padding: 0.5rem 2.5rem 0.5rem 0.8rem;
                    border-radius: 4px;
                    border: 1px solid #ccc;
                }

                .header .search-bar button {
                    position: absolute;
                    top: 50%;
                    right: 8px;
                    transform: translateY(-50%);
                    border: none;
                    background: none;
                    color: #888;
                    cursor: pointer;
                }

            .header .user-info {
                display: flex;
                align-items: center;
            }

                .header .user-info img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    object-fit: cover;
                    margin-right: 0.5rem;
                }

                .header .user-info span {
                    font-weight: 500;
                    color: #4B4B4B;
                }

            /* Kategorie (pod logem a vyhledáváním) */
            .header .categories {
                margin-top: 1rem;
            }

                .header .categories a {
                    margin-right: 2rem;
                    text-decoration: none;
                    font-weight: 500;
                    color: #4B4B4B;
                }

                    .header .categories a:hover {
                        text-decoration: underline;
                    }

        /* Produktová sekce */
        .product-section {
            padding: 2rem;
            display: flex;
            flex-wrap: wrap;
        }

            .product-section .product-image {
                flex: 1 1 300px;
                max-width: 450px;
                margin-right: 2rem;
                margin-bottom: 1rem;
            }

                .product-section .product-image img {
                    width: 100%;
                    border-radius: 8px;
                }

            .product-section .product-info {
                flex: 1 1 300px;
                max-width: 500px;
            }

            .product-section h1 {
                font-size: 2rem;
                font-weight: bold;
                color: #4B4B4B;
                margin-bottom: 1rem;
            }

            .product-section p {
                color: #4B4B4B;
                font-size: 1rem;
                margin-bottom: 0.8rem;
            }

            .product-section .product-price {
                font-size: 1.4rem;
                font-weight: bold;
                color: #C90076; /* výraznější růžová */
                margin-bottom: 1.5rem;
            }

            .product-section .btn-add-to-cart {
                background-color: #C90076;
                color: #fff;
                border: none;
                padding: 0.7rem 1.5rem;
                border-radius: 4px;
                font-weight: 500;
                cursor: pointer;
            }

                .product-section .btn-add-to-cart:hover {
                    background-color: #A80064;
                }

        /* Sekce recenzí */
        .reviews-section {
            padding: 2rem;
        }

            .reviews-section h2 {
                font-size: 1.8rem;
                font-weight: bold;
                color: #4B4B4B;
                margin-bottom: 2rem;
            }
        /* Formulář pro hvězdičkové hodnocení */
        .review-input {
            margin-bottom: 2rem;
        }

            .review-input p {
                margin-bottom: 0.5rem;
                font-weight: 500;
                color: #4B4B4B;
            }

        .star-icon {
            color: #C90076;
            font-size: 1.5rem;
            cursor: pointer;
            margin-right: 0.3rem;
        }
        /* Jednotlivé recenze */
        .review-box {
            background-color: #FFFFFF;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

            .review-box .review-header {
                display: flex;
                align-items: center;
                margin-bottom: 0.5rem;
            }

                .review-box .review-header .fa {
                    color: #C90076;
                    margin-right: 0.2rem;
                }

                .review-box .review-header span {
                    margin-left: 1rem;
                    font-weight: 500;
                    color: #4B4B4B;
                }

            .review-box p {
                margin: 0;
                color: #4B4B4B;
            }
    </style>
</head>
<body>
    <!-- Horní část stránky -->
    <header class="header">
        <!-- 1) Řádek s logem, vyhledáváním a uživatelem -->
        <div class="top-row">
            <div class="logo">FlowerShop</div>
            <div class="search-bar">
                <input type="text" placeholder="Hledat" />
                <button type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="user-info">
                <img src="https://via.placeholder.com/40" alt="Profil">
                <span>Zuz Honková</span>
            </div>
        </div>
        <!-- 2) Řádek s kategoriemi -->
        <div class="categories">
            <a href="#">Květinové kytice a aranže</a>
            <a href="#">Řezané květiny</a>
        </div>
    </header>

    <!-- Sekce detailu produktu -->
    <section class="product-section">
        <div class="product-image">
            <!-- Pokud máte v modelu ImageUrl, použijte: src="@Model.ImageUrl" -->
            <img src="https://via.placeholder.com/400x400/FF4B8B/ffffff?text=Kytice+rud%C3%BDch+r%C5%AF%C5%BE%C3%AD"
                 alt="@Model.Name" />
        </div>
        <div class="product-info">
            <!-- Název produktu -->
            <h1>Kytice rudých růží</h1>
            <!-- Popis produktu -->
            <p>Výběrová 3kmená kytice s růžovými růžemi vhodná pro každodenní radost.</p>
            <p>Počet růží: 100 kusů</p>
            <!-- Cena -->
            <div class="product-price">Cena 300 Kč</div>
            <!-- Tlačítko přidat do košíku (případně formulář) -->
            <form method="post" action="#">
                <!-- Sem byste dala logiku pro AddToCart -->
                <button type="submit" class="btn-add-to-cart">Přidat do košíku</button>
            </form>
        </div>
    </section>

    <!-- Sekce recenzí -->
    <section class="reviews-section">
        <h2>Recenze uživatelů</h2>

        <!-- Vlastní hodnocení (pokud byste chtěla přidat recenzi) -->
        <div class="review-input">
            <p>Jak se produkt líbil Vám?</p>
            <!-- Hvězdičky (zatím bez funkční logiky) -->
            <i class="fa fa-star-o star-icon"></i>
            <i class="fa fa-star-o star-icon"></i>
            <i class="fa fa-star-o star-icon"></i>
            <i class="fa fa-star-o star-icon"></i>
            <i class="fa fa-star-o star-icon"></i>
        </div>

        <!-- Ukázka recenzí -->
        <div class="review-box">
            <div class="review-header">
                <!-- 5 hvězdiček -->
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <span>Anonym</span>
            </div>
            <p>Nejlepší kytice, kterou jsem kdy dostala!</p>
        </div>

        <div class="review-box">
            <div class="review-header">
                <!-- 2 hvězdičky -->
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-o"></i>
                <i class="fa fa-star-o"></i>
                <i class="fa fa-star-o"></i>
                <span>Anonym</span>
            </div>
            <p>Hrozná... Už nikdy více.</p>
        </div>

        <div class="review-box">
            <div class="review-header">
                <!-- 4,5 hvězdičky (zde ukázkově 4x plná a 1x poloprázdná) -->
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-o"></i>
                <span>Anonym</span>
            </div>
            <p>Nejlepší přání k narozeninám, které jsem kdy dostal!</p>
        </div>
    </section>

    <!-- Bootstrap a jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>