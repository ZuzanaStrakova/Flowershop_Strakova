@model Flowershop_Strakova.Models.ProductViewModel

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - FlowerShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- FontAwesome pro zobrazení hvězdiček -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .product-image {
            max-width: 100%;
            height: auto;
        }
        .rating-stars {
            color: gold;
        }
        .breadcrumb a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Breadcrumb navigace -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Domů</a></li>
@*                 <li class="breadcrumb-item"><a href="@Url.Action("MainPage", "Home")">Produkty</a></li> *@
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Levý sloupec: Velký obrázek produktu -->
            <div class="col-md-6">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid product-image" />
            </div>
            <!-- Pravý sloupec: Informace o produktu -->
            <div class="col-md-6">
                <h1>@Model.Name</h1>
                <h3 class="text-danger">@String.Format("{0:C}", Model.Price)</h3>
                
                <!-- Zobrazení hodnocení -->
                <div>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Model.Rating)
                        {
                            <span class="fa fa-star rating-stars"></span>
                        }
                        else
                        {
                            <span class="fa fa-star-o rating-stars"></span>
                        }
                    }
                    <small class="text-muted">(@Model.RatingCount recenzí)</small>
                </div>
                
                <p class="mt-3"><strong>Stav skladu:</strong> @Model.StorageAmount kusů</p>
                <p>@Model.Description</p>
                <hr />
                <!-- Formulář pro přidání do košíku -->
                <form method="post" action="@Url.Action("AddToCart", "Cart")">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="form-group row">
                        <label for="quantity" class="col-sm-3 col-form-label">Množství:</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="@Model.StorageAmount" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Přidat do košíku</button>
                </form>
            </div>
        </div>

        <!-- Další informace o produktu -->
        <div class="row mt-5">
            <div class="col-md-12">
                <h4>Popis produktu</h4>
                <p>@Model.Description</p>
                <!-- Zde lze přidat další záložky (specifikace, recenze, podobné produkty apod.) -->
            </div>
        </div>
    </div>

    <!-- Skripty pro Bootstrap a jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
