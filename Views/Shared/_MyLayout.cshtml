<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <title>FlowerShop</title>
    <!-- Google Font (pouze Neuton pro logo) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Neuton&display=swap" rel="stylesheet">

    <!-- Odkaz na Font Awesome pro ikony -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-..."
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <style>
        /* RESET A ZÁKLADNÍ NASTAVENÍ */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
        }

        body {
            font-family: sans-serif;
            color: #333;
            background-color: #fff;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ul {
            list-style: none;
        }

        /********************************************
                             * HLAVIČKA – BÍLÁ ČÁST
                             ********************************************/
        header {
            width: 100%;
            background-color: #fff;
        }

        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem 2rem;
        }

        .logo {
            font-family: 'Neuton', serif;
            font-size: 3rem;
            color: #9D4C83;
            font-weight: bold;
            margin-top: auto;
            margin-bottom: auto;
        }

        .top-nav-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .search-container {
            position: relative;
        }

            .search-container input[type="search"] {
                font-size: 1.2rem;
                padding: 0.6rem 2.2rem 0.6rem 1rem;
                border: 1px solid #9D4C83;
                border-radius: 4px;
                background-color: #fff;
            }

            .search-container input::placeholder {
                color: #9D4C83;
            }

            .search-container .fa-search {
                position: absolute;
                right: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #9D4C83;
                cursor: pointer;
                font-size: 1.5rem;
            }

        .icon-btn {
            color: #9D4C83;
            font-size: 1.8rem;
            cursor: pointer;
        }

        .user-name {
            margin-left: 0.3rem;
            color: #666;
            font-size: 1.2rem;
        }

        /********************************************
                             * RŮŽOVÁ SEKCE – NAV BAR A PRODUKT
                             ********************************************/
        .pink-section {
            background-color: #FFF3FB;
            position: relative;
            padding: 1rem 2rem 7rem;
        }

        .menu-nav {
            display: flex;
            justify-content: center;
            font-size: 1.8rem;
            gap: 6rem;
            padding: 0.8rem 0;
            margin-bottom: 0;
        }

            .menu-nav a {
                color: #9D4C83;
                font-weight: 600;
                position: relative;
                padding: 0.5rem 0.3rem;
            }

                .menu-nav a i {
                    margin-left: 0.3rem;
                    font-size: 1.8rem;
                }

                .menu-nav a:hover {
                    background-color: #fcd5e5;
                    border-radius: 4px;
                }

        .nav-separator {
            border: none;
            height: 1px;
            background-color: #9D4C83;
            max-width: 80%;
            margin: 0 auto 0.5rem;
        }

/*         .wave {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 120px;
            overflow: hidden;
            line-height: 0;
        } */

        .wave-bg {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            z-index: 1; /* Vlnovka bude pod obsahem */
            pointer-events: none; /* Zajistí, že kliknutí "propadnou" obsahu, pokud by to bylo potřeba */
        }

            .wave svg {
                display: block;
                width: 100%;
                height: 100%;
            }


        .content {
            position: relative;
            z-index: 2; /* Obsah bude nad vlnovkou */
        }

        /********************************************
                             * FOOTER
                             ********************************************/
        footer {
            border-top: 1px solid #ccc;
            color: #666;
            text-align: center;
            padding: 1rem;
        }
    </style>
</head>
<body>

    <!-- HLAVIČKA -->
    <header>
        <div class="header-top">
            <a href="@Url.Action("Index", "Products")" class="logo">FlowerShop</a>
            <div class="top-nav-right">
                <div class="search-container">
                    <input type="search" placeholder="Hledat..." />
                    <i class="fa fa-search"></i>
                </div>
                <a href="@Url.Action("Index", "Cart")">
                    <i class="fa fa-shopping-cart icon-btn"></i>
                </a>
                <i class="fa fa-user icon-btn"></i>
                <span class="user-name">@Context.Session.GetString("User") [@Context.Session.GetString("Role")]</span>
            </div>
        </div>
    </header>

    <!-- RŮŽOVÁ SEKCE – NAV BAR A PRODUKT -->
    <section class="pink-section">
        <nav class="menu-nav">
            <a href="#">
                Řezané květiny
                <i class="fa fa-caret-down"></i>
            </a>
            <a href="#">
                Květinové kytice a aranže
                <i class="fa fa-caret-down"></i>
            </a>
            <a href="#">
                Řezané květiny
                <i class="fa fa-caret-down"></i>
            </a>
        </nav>

        <div class="content">
            @RenderBody()
        </div>

        <div class="wave-bg">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M0.00,49.98
                     C150.00,150.00 350.00,-50.00 500.00,49.98
                     L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;">
                </path>
            </svg>
        </div>
    </section>



    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div>
            © 2025 - Flowershop_Strakova - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>

</body>
</html>