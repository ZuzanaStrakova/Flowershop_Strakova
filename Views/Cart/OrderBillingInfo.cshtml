@model AccountViewModel
@{
    Layout = null;
    ViewBag.Title = "FlowerShop";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <title>FlowerShop</title>
    <!-- Google Font (pouze Neuton pro logo) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Neuton&display=swap" rel="stylesheet" />

    <!-- Odkaz na Font Awesome pro ikony (pokud chcete) -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-..."
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <style>
        /* RESET A ZÁKLADNÍ NASTAVENÍ */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
        }

        body {
            font-family: sans-serif;
            color: #9D4C83;
            background-color: #fff;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ul {
            list-style: none;
        }

        /********************************************
                 * HLAVIČKA – BÍLÁ ČÁST
                 ********************************************/
        header {
            width: 100%;
            background-color: #fff;
        }

        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem 2rem;
        }

        .logo {
            font-family: 'Neuton', serif;
            font-size: 3rem;
            color: #9D4C83;
            font-weight: bold;
        }

        .top-nav-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .search-container {
            position: relative;
        }

            .search-container input[type="search"] {
                font-size: 1.2rem;
                padding: 0.6rem 2.2rem 0.6rem 1rem;
                border: 1px solid #9D4C83;
                border-radius: 4px;
                background-color: #fff;
            }

            .search-container input::placeholder {
                color: #9D4C83;
            }

            .search-container .fa-search {
                position: absolute;
                right: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #9D4C83;
                cursor: pointer;
                font-size: 1.5rem;
            }

        .icon-btn {
            color: #9D4C83;
            font-size: 1.8rem;
            cursor: pointer;
        }

        .user-name {
            margin-left: 0.3rem;
            font-size: 1.2rem;
        }

        /********************************************
                 * RŮŽOVÁ SEKCE (NAV BAR)
                 ********************************************/
        .pink-section {
            background-color: #FFF3FB;
            position: relative;
            min-height: 800px; /* Růžové pozadí; upravte dle potřeby */
        }

        .menu-nav {
            display: flex;
            justify-content: center;
            font-size: 1.4rem;
            gap: 6rem;
            padding: 0.8rem 0;
        }

            .menu-nav a {
                color: #9D4C83;
                font-weight: 600;
                padding: 0.5rem 0.3rem;
            }

                .menu-nav a i {
                    margin-left: 0.3rem;
                    font-size: 1.4rem;
                }

                .menu-nav a:hover {
                    background-color: #fcd5e5;
                    border-radius: 4px;
                }

        /* Fialová linka, s mezerou pod ní (margin-bottom) */
        .nav-separator {
            border: none;
            height: 1px;
            background-color: #9D4C83;
            max-width: 80%;
            margin: 0 auto 2rem; /* 2rem dole pro mezeru */
        }

        /********************************************
                 * FORMULÁŘ OSOBNÍCH ÚDAJŮ
                 ********************************************/
        .form-container {
            width: 50%;
            /* Přidáno margin-top: 3rem, aby byl větší prostor nad "Osobní údaje" */
            margin: 3rem auto 2rem auto;
        }

        .form-title {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            text-align: left;
            font-weight: bold;
        }

        /* form-row = řádek s 2 sloupci */
        .form-row {
            display: flex;
            gap: 2rem;
            margin-bottom: 1.5rem;
        }
        /* .form-row-three už nepotřebujeme,
                   protože Ulice/Město/PSČ se sloučily do jednoho pole "Adresa" */

        .form-col {
            flex: 1; /* roztáhne se na 100% dostupné šířky, pokud je jen jeden .form-col v řádku */
        }

        .message-col {
            flex: 2;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                margin-bottom: 0.4rem;
                font-weight: 600;
                color: #9D4C83;
            }
            /* Bez rámečku, bílé pozadí, atd. */
            .form-group input,
            .form-group select,
            .form-group textarea {
                background-color: #fff;
                color: #9D4C83;
                font-size: 1rem;
                border: none;
                border-radius: 4px;
                height: 2.6rem;
                padding: 0 0.6rem;
            }

            .form-group textarea {
                height: 6rem;
                resize: none;
                padding: 0.6rem;
            }

                .form-group select:focus,
                .form-group input:focus,
                .form-group textarea:focus {
                    outline: none;
                }

        /* Telefon (select + input) stejně vysoké */
        .phone-combined {
            display: flex;
            align-items: center;
            background-color: #fff;
            border-radius: 4px;
            height: 2.6rem;
        }

            .phone-combined select {
                border: none;
                background: transparent;
                color: #9D4C83;
                font-size: 1rem;
                cursor: pointer;
                appearance: none;
                -webkit-appearance: none;
                -moz-appearance: none;
                margin-left: 0.6rem;
                margin-right: 0.8rem;
                height: 100%;
            }

                .phone-combined select:focus {
                    outline: none;
                }

            .phone-combined input[type="tel"] {
                border: none;
                background-color: transparent;
                color: #9D4C83;
                font-size: 1rem;
                flex: 1;
                height: 100%;
            }

                .phone-combined input[type="tel"]:focus {
                    outline: none;
                }

        /********************************************
                 * SPOLEČNÝ ŘÁDEK PRO CHECKBOX A TLAČÍTKO
                 ********************************************/
        .bottom-row {
            display: flex;
            align-items: center;
            justify-content: space-between; /* checkbox vlevo, tlačítko vpravo */
            margin-top: 1.5rem;
        }

        /* Checkbox – vycentrovaný checkmark */
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .checkbox-group input[type="checkbox"].square-check {
                appearance: none;
                -webkit-appearance: none;
                width: 1.2rem;
                height: 1.2rem;
                margin: 0;
                border: 2px solid #9D4C83;
                border-radius: 4px;
                background-color: transparent;
                cursor: pointer;
                position: relative;
            }

                .checkbox-group input[type="checkbox"].square-check:hover {
                    border-color: #7d2e65;
                }

                .checkbox-group input[type="checkbox"].square-check:checked {
                    background-color: #9D4C83;
                }

                    .checkbox-group input[type="checkbox"].square-check:checked::after {
                        content: '';
                        position: absolute;
                        width: 3px;
                        height: 7px;
                        border: solid #fff;
                        border-width: 0 2px 2px 0;
                        transform: translate(-50%, -50%) rotate(45deg);
                        top: 50%;
                        left: 50%;
                    }

        .checkbox-label {
            color: #9D4C83;
            font-weight: 500;
            font-size: 1rem;
        }

        /* Tlačítko – "Zaplatit" */
        .continue-button {
            background-color: #FFD5F2;
            color: #9D4C83;
            padding: 0.8rem 1.8rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1.1rem;
        }

            .continue-button:hover {
                background-color: #ffcaee;
            }

        /********************************************
                 * FOOTER
                 ********************************************/
        footer {
            border-top: 1px solid #ccc;
            text-align: center;
            padding: 1rem;
            color: #666;
        }

        /********************************************
                 * VLNA DOLE
                 ********************************************/
        .wave {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 120px;
            overflow: hidden;
            line-height: 0;
        }

            .wave svg {
                display: block;
                width: 100%;
                height: 100%;
            }
    </style>
</head>
<body>
    <!-- HLAVIČKA -->
    <header>
        <div class="header-top">
            <div class="logo">FlowerShop</div>
            <div class="top-nav-right">
                <div class="search-container">
                    <input type="search" placeholder="Hledat..." />
                    <i class="fa fa-search"></i>
                </div>
                <i class="fa fa-shopping-cart icon-btn"></i>
                <i class="fa fa-user icon-btn"></i>
                <span class="user-name">Zuz Honková</span>
            </div>
        </div>
    </header>

    <!-- RŮŽOVÁ SEKCE s NAV BAR -->
    <section class="pink-section">
        <nav class="menu-nav">
            <a href="#">
                Řezané květiny
                <i class="fa fa-caret-down"></i>
            </a>
            <a href="#">
                Květinové kytice a aranže
                <i class="fa fa-caret-down"></i>
            </a>
            <a href="#">
                Pokojové a kancelářské rostliny
                <i class="fa fa-caret-down"></i>
            </a>
        </nav>

        <!-- Fialová oddělovací čára (s margin-bottom) -->
        <hr class="nav-separator" />

        <!-- FORMULÁŘ OSOBNÍCH ÚDAJŮ -->
        <div class="form-container">
            <h1 class="form-title">Osobní údaje</h1>
            <form method="post" action="#">

                <!-- 1. řádek: Jméno / Příjmení -->
                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label for="firstName">Jméno</label>
                            <input type="text" id="firstName" name="firstName" />
                        </div>
                    </div>
                    <div class="form-col">
                        <div class="form-group">
                            <label for="lastName">Příjmení</label>
                            <input type="text" id="lastName" name="lastName" />
                        </div>
                    </div>
                </div>

                <!-- 2. řádek: E-mail / Telefon -->
                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" id="email" name="email" />
                        </div>
                    </div>
                    <div class="form-col">
                        <div class="form-group">
                            <label for="phoneNumber">Telefon</label>
                            <div class="phone-combined">
                                <select id="countryCode" name="countryCode">
                                    <option value="+420" selected>🇨🇿 +420</option>
                                    <option value="+421">🇸🇰 +421</option>
                                    <option value="+49">🇩🇪 +49</option>
                                    <option value="+48">🇵🇱 +48</option>
                                    <option value="+1">🇺🇸 +1</option>
                                    <option value="+44">🇬🇧 +44</option>
                                    <option value="+81">🇯🇵 +81</option>
                                </select>
                                <input type="tel"
                                       id="phoneNumber"
                                       name="phoneNumber"
                                       placeholder="Zadejte číslo" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Adresa (sloučené Ulice, Město, PSČ) do jednoho inputu -->
                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label for="fullAddress">Adresa</label>
                            <input type="text" id="fullAddress" name="fullAddress" placeholder="Ulice, číslo, město, PSČ" />
                        </div>
                    </div>
                </div>

                <!-- 4. řádek: Země / Zpráva pro příjemce (textarea) -->
                <div class="form-row">
                    <div class="form-col">
                        <div class="form-group">
                            <label for="country">Země</label>
                            <select id="country" name="country">
                                <option value="cz" selected>Česká republika</option>
                                <option value="sk">Slovensko</option>
                                <option value="de">Německo</option>
                                <option value="pl">Polsko</option>
                            </select>
                        </div>
                    </div>
                    <div class="message-col">
                        <div class="form-group">
                            <label for="message">Zpráva pro příjemce</label>
                            <textarea id="message" name="message"></textarea>
                        </div>
                    </div>
                </div>

                <!-- SPOLEČNÝ ŘÁDEK PRO CHECKBOX A TLAČÍTKO -->
                <div class="bottom-row">
                    <!-- Checkbox vlevo -->
                    <div class="checkbox-group">
                        <input type="checkbox" id="gdpr" name="gdpr" class="square-check" />
                        <label for="gdpr" class="checkbox-label">Souhlasím se zpracováním osobních údajů</label>
                    </div>
                    <!-- Tlačítko vpravo -->
                    <button type="submit" class="continue-button">Zaplatit</button>
                </div>
            </form>
        </div>

        <!-- VLNA DOLE -->
        <div class="wave">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none">
                <path d="M0.00,49.98
                         C150.00,150.00 350.00,-50.00 500.00,49.98
                         L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;">
                </path>
            </svg>
        </div>
    </section>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div>
            © 2025 - Flowershop_Strakova - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
